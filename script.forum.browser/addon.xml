<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.forum.browser"
       name="Forum Browser"
       version="0.7.3"
       provider-name="Rick Phillips (ruuk)">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.beautifulsoup" version="3.0.8.1"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Browse forums within XBMC</summary>
    <description lang="en">Browse Forums in XBMC. View forums, threads, posts, and subscriptions. Post replies, delete posts, quote posts. View images in posts. Currently supports Forums: xbmc.org,boxee.tv,xbmc4xbox.org</description>
  </extension>
</addon>